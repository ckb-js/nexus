{
  "name": "nexus",
  "version": "0.0.1",
  "description": "An UTxO friendly wallet extension for CKB",
  "private": true,
  "engines": {
    "node": ">=18.14",
    "npm": ">=9.4"
  },
  "workspaces": [
    "packages/*",
    "lumos",
    "lumos/packages/*"
  ],
  "devDependencies": {
    "@auto-it/magic-zero": "10.43.0",
    "@auto-it/released": "10.43.0",
    "@auto-it/upload-assets": "10.43.0",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "29.4.0",
    "@types/lodash.times": "4.3.7",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "concat-md": "0.5.1",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.32.0",
    "eslint-config-react-app": "7.0.1",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "jest-environment-jsdom": "29.4.1",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "rimraf": "4.1.2",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typedoc": "0.23.26",
    "typedoc-plugin-markdown": "3.14.0",
    "typescript": "4.9.4"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "run-s build:lumos build:libs build:extension-chrome",
    "build:nexus": "echo -e '[DEPRECATED]: please migrate to build:libs' && npm run build:libs",
    "build:libs": "npm run build -w @nexus-wallet/types -w @nexus-wallet/utils",
    "build:lumos": "cd lumos && npm run build",
    "build:extension-chrome": "npm run build -w @nexus-wallet/extension-chrome",
    "test": "jest",
    "start": "npm run start -w @nexus-wallet/extension-chrome",
    "lint": "eslint 'packages/*/{src,__tests__}/**/*.{js,ts,jsx,tsx}'",
    "check": "npm run check:types",
    "check:types": "npm run check:types -w @nexus-wallet/types -w @nexus-wallet/utils -w @nexus-wallet/extension-chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/nexus.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ckb-js/nexus/issues"
  },
  "homepage": "https://github.com/ckb-js/nexus#readme",
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx eslint"
    ],
    "packages/types/**/*": [
      "npm run build:docs -w @nexus-wallet/types",
      "git add docs/rpc.md"
    ]
  },
  "dependencies": {
    "@types/webextension-polyfill": "0.10.0",
    "lodash.times": "4.3.2",
    "webext-bridge": "5.0.5",
    "webextension-polyfill": "0.10.0"
  },
  "auto": {
    "plugins": [
      "magic-zero",
      "released",
      [
        "upload-assets",
        [
          "packages/extension-chrome/nexus.zip"
        ]
      ]
    ],
    "labels": [
      {
        "name": "breaking-minor",
        "description": "Major version zero (0.y.z) is for initial development. Anything MAY change at any time.",
        "changelogTitle": "ðŸ”¨ Breaking Minor Change",
        "releaseType": "minor"
      },
      {
        "name": "dependency-update",
        "changelogTitle": "ðŸ”© Dependency Updates",
        "releaseType": "none"
      }
    ]
  }
}
