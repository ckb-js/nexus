{
  "name": "nexus",
  "version": "0.0.1",
  "description": "An UTxO friendly wallet extension for CKB",
  "private": true,
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "workspaces": [
    "packages/*",
    "lumos",
    "lumos/packages/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "29.4.0",
    "@types/lodash.times": "4.3.7",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.32.0",
    "eslint-config-react-app": "7.0.1",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "jest-environment-jsdom": "29.4.1",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "rimraf": "4.1.2",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "run-s build:lumos build:nexus",
    "build:nexus": "npm run build --workspace=@nexus-wallet/types --workspace=@nexus-wallet/utils",
    "build:lumos": "cd lumos && npm run build",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/nexus.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ckb-js/nexus/issues"
  },
  "homepage": "https://github.com/ckb-js/nexus#readme",
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npx eslint"
    ]
  },
  "dependencies": {
    "@types/webextension-polyfill": "0.10.0",
    "lodash.times": "4.3.2",
    "webext-bridge": "5.0.5",
    "webextension-polyfill": "0.10.0"
  }
}
