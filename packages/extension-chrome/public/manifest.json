{
  "version": "0.0.1",
  "manifest_version": 3,
  "name": "Nexus Wallet",
  "description": "An UTxO friendly wallet extension for CKB",
  "permissions": [
    "activeTab",
    "alarms",
    "clipboardWrite",
    "notifications",
    "scripting",
    "storage",
    "unlimitedStorage",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Nexus",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.hot-update.json", "popup.html", "inpage.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
