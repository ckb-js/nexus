{
  "name": "@nexus-wallet/utils",
  "version": "0.0.11",
  "description": "",
  "homepage": "https://github.com/ckb-js/nexus/tree/main/utils#readme",
  "license": "MIT",
  "main": "lib",
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/nexus.git"
  },
  "scripts": {
    "prepare": "npm run bump",
    "version": "npm run bump",
    "bump": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/env.ts && prettier --write src/env.ts",
    "start": "cross-env NODE_ENV=development npm run start:webpack",
    "start:webpack": "ts-node ./scripts/start.ts",
    "build": "tsc",
    "clean": "rimraf build/*",
    "check": "npm run check:types",
    "check:types": "tsc --noEmit"
  },
  "bugs": {
    "url": "https://github.com/ckb-js/nexus/issues"
  }
}
